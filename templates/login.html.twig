{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title'|trans }}{% endblock %}

{% block body %}
<h1>{{ 'login.title'|trans }}</h1>
<form onsubmit="login(event)">
    <label for="email">{{ 'login.email'|trans }}:</label>
    <input type="email" id="email" name="email" required>
    <br>
    <label for="password">{{ 'login.password'|trans }}:</label>
    <input type="password" id="password" name="password" required>
    <br>
    <button type="submit">{{ 'login.submit'|trans }}</button>
    <div id="error-message" style="color: red;"></div>
    <div id="success-message" style="color: green;"></div>
</form>

<script>
    async function login(event) {
        event.preventDefault();
        const email = document.getElementById('email').value;
        const password = document.getElementById('password').value;

        const response = await fetch('/api/auth/login', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ email, password })
        });

        if (response.ok) {
            const data = await response.json();

            if (data.jwt) {
                sessionStorage.setItem('jwt', data.jwt);


                console.log('Success:', data);
                document.getElementById('error-message').textContent = '';
                document.getElementById('success-message').textContent = '{{ 'login.success'|trans }}!';
                window.location.href = '/';
            } else if (data.error) {
                document.getElementById('error-message').textContent = data.error;
            }
        } else {
            const data = await response.json();
            document.getElementById('error-message').textContent = '{{ 'login.error'|trans }}: ' + data.error;
        }
    }
</script>
{% endblock %}
