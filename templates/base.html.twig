<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}BBG shop{% endblock %}</title>
    <link href="{{asset('assets/css/bootstrap.min.css')}}" rel="stylesheet">
    <link href="{{asset('assets/css/carousel.css')}}" rel="stylesheet">
    <link href="{{asset('assets/css/style.css')}}" rel="stylesheet">
    <link rel="stylesheet" href="{{asset('assets/css/bootstrap-icons.css')}}">
</head>
<body>
<header>
    {% include "nav.html.twig" %}
</header>
<main class="mb-5" role="main">
    {% if carousel is defined %}
        {% include "products.html.twig" %}
    {% else %}
        {% set margin = 'mt-5' %}
    {% endif %}
    <div class="container {{margin ?? 0}}">
        {% block body %}{% endblock %}
    </div>
</main>
<footer class="footer-custom">
    {% include "footer.html.twig" %}
</footer>
<script src="{{asset('assets/js/jquery-3.5.1.slim.min.js')}}"></script>
<script src="{{asset('assets/js/bootstrap.bundle.js')}}"></script>
<script src="{{asset('assets/js/ui-update.js')}}"></script>
<script src="{{asset('assets/js/language-handler.js')}}"></script>

{# Add auth handler script #}
<script type="module">
    import { initializeAuth, handleLogout } from '{{asset('assets/js/auth-handler.js')}}';
    // Make handleLogout available globally
    window.handleLogout = handleLogout;
    // Initialize auth when DOM is loaded
    document.addEventListener('DOMContentLoaded', initializeAuth);
</script>
{% block javascripts %}{% endblock %}
</body>
</html>
